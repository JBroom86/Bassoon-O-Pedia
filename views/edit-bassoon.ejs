<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/header.ejs', {title: `Edit ${bassoonFox.name} | Bassoon-O-Pedia`}) %>
    <link rel="stylesheet" href="/styles/pet-form.css">
</head>

<body>
    <%- include('./partials/nav.ejs') %>

    <h1>Edit Bassoon</h1>

    <form method="POST" action="/pets/<%= bassoonFox._id %>?_method=PUT">
        <!-- Make input -->
        <label for="Make">Make:</label>
        <input type="text" id="Make" name="Make" value="<%= bassoonFox.make %>" required>
        <br>
        <!-- Model input -->
        <label for="model">Model:</label>
        <input type="text" id="model" name="model" value="<%= bassoonFox.model %>" required>
        <br>
        <!-- Details input -->
        <label for="details">Details:</label>
        <input type="text" id="details" name="details" value="<%= bassoonFox.details %>">
        <br>
        <!-- Serial input -->
        <label for="serial">Serial Number:</label>
        <input type="text" id="serial" name="serial" value="<%= bassoonFox.serial %>">

        <!-- History input -->
        <label for="history">History:</label>
        <input type="text" id="history" name="history" value="<%= bassoonFox.history %>">
        
        <br>
        <!-- Photo input -->
        <label for="photo">Photo (URL):</label>
        <input type="text" id="photo" name="photo" value="<%= bassoonFox.photo %>" required>
        <br>
        
        <input type="submit" value="Add Bassoon">
    </form>
    
    <%- include('./partials/footer.ejs') %>
</body>

</html>
